{
  "name": "react-template",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.5",
    "@testing-library/react": "^11.1.1",
    "@testing-library/user-event": "^12.2.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-scripts": "4.0.0",
    "web-vitals": "^0.2.4",
    "react-router-dom": "latest",
    "mui-datatables": "latest",
    "prop-types": "latest",
    "clsx": "latest",
    "@material-ui/core": "latest",
    "@material-ui/icons": "latest"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "test:no-watch": "npm test -- --watchAll=false",
    "coverage": "npm test -- --coverage",
    "coverage:coveralls": "npm run coverage && coveralls < coverage/lcov.info",
    "coverage:codacy": "npm run coverage && cp -R coverage .github/workflows/coverage/"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "jest": true
    },
    "extends": [
      "react-app",
      "react-app/jest",
      "plugin:react/recommended",
      "airbnb",
      "plugin:testing-library/react",
      "plugin:jest-dom/recommended"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "plugins": [
      "react",
      "material-ui"
    ],
    "rules": {}
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "coveralls": "latest",
    "eslint-config-airbnb": "latest",
    "eslint-plugin-import": "latest",
    "eslint-plugin-jest-dom": "latest",
    "eslint-plugin-jsx-a11y": "latest",
    "eslint-plugin-material-ui": "latest",
    "eslint-plugin-react": "latest",
    "eslint-plugin-react-hooks": "latest",
    "eslint-plugin-testing-library": "latest"
  }
}
